# Local Development Environment Configuration
DEBUG=1
DJANGO_ENV=development

# Database (using SQLite for local development)
DATABASE_URL=sqlite:///db.sqlite3

# Django Secret Key (for development only)
SECRET_KEY=dev-secret-key-change-in-production

# Service URLs (for inter-service communication)
FRONTEND_API_URL=http://frontend_api:8001
IOT_INGESTION_URL=http://iot_ingestion:8002
AI_PROCESSOR_URL=http://ai_processor:8003
ALERT_SERVICE_URL=http://alert_service:8004

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=DEBUG

# Allowed Hosts (for Docker)
ALLOWED_HOSTS=localhost,127.0.0.1,frontend_web,frontend_api,iot_ingestion,ai_processor,alert_service,nginx
